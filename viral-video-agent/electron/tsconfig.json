{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "../dist-electron",
        "rootDir": "..",
        "strict": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./*.ts",
        "../src/services/*.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}