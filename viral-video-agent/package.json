{
  "name": "viral-video-agent",
  "version": "1.1.0",
  "description": "360行 AI智能体大脑 ",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:clean": "node scripts/clean.js",
    "dev": "npm run dev:clean && npm run electron:dev",
    "electron:dev": "cross-env NODE_ENV=development VITE_APP_MODE=electron node scripts/build-electron.js && concurrently \"cross-env NODE_ENV=development VITE_APP_MODE=electron vite --config vite.config.ts\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "node scripts/build-electron.js && vite build --config vite.config.ts && electron-builder",
    "web:dev": "node scripts/build-web-server.js && concurrently \"node dist-web-server/server.js\" \"cross-env VITE_APP_MODE=web vite --config vite.config.ts\"",
    "web:build": "node scripts/build-web-server.js && vite build --config vite.config.ts",
    "web:serve": "node dist-web-server/server.js",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "ai",
    "video"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/ws": "^8.18.1",
    "antd": "^5.0.0",
    "concurrently": "^8.0.0",
    "cos-nodejs-sdk-v5": "^2.15.4",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "ffmpeg-static": "^5.3.0",
    "form-data": "^4.0.5",
    "playwright": "^1.57.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-devtools-installer": "^3.2.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.viral-video-agent.app",
    "productName": "360行,AI智能体大脑",
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "src/services/Wav2Lip",
        "to": "Wav2Lip",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!.git/**",
          "!.gitignore",
          "!checkpoints/**",
          "!evaluation/**",
          "!results/**",
          "!temp/**",
          "!face_detection/detection/sfd/s3fd.pth"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    }
  }
}
