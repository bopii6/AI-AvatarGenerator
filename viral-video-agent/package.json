{
  "name": "viral-video-agent",
  "version": "1.0.0",
  "description": "一键追爆 - 全自动AI智能体",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm run electron:dev",
    "web:dev": "vite",
    "build": "node scripts/build-electron.js && vite build && electron-builder",
    "preview": "vite preview",
    "electron:compile": "node scripts/build-electron.js",
    "electron:dev": "node scripts/build-electron.js && concurrently \"cross-env NODE_ENV=development vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "node scripts/build-electron.js && vite build && electron-builder"
  },
  "keywords": [
    "electron",
    "vite",
    "react",
    "ai",
    "video"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "antd": "^5.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "ffmpeg-static": "^5.3.0",
    "form-data": "^4.0.5",
    "playwright": "^1.57.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^13.0.0",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-devtools-installer": "^3.2.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.viral-video-agent.app",
    "productName": "一键追爆",
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "src/services/Wav2Lip",
        "to": "Wav2Lip",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!.git/**",
          "!.gitignore",
          "!checkpoints/**",
          "!evaluation/**",
          "!results/**",
          "!temp/**",
          "!face_detection/detection/sfd/s3fd.pth"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    }
  }
}